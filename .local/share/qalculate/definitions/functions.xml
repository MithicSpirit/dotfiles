<?xml version="1.0"?>
<QALCULATE version="3.22.0">
  <category>
    <title>Matrices &amp; Vectors</title>
    <function>
      <title>Project</title>
      <names>r:proj</names>
      <description>Perpendicular projection of a vector onto another.</description>
      <expression>(dot(\x,\y)/dot(\y,\y))*\y</expression>
      <argument type="vector" index="1">
        <title>Vector</title>
      </argument>
      <argument type="vector" index="2">
        <title>Projection basis</title>
      </argument>
    </function>
    <function>
      <title>Project (basis)</title>
      <names>r:projbas</names>
      <description>Perpendicular projection of a vector onto an orthogonal basis.</description>
      <expression>sum(proj(\x,column(\y,\i)),1,columns(\y),\i)</expression>
      <argument type="vector" index="1">
        <title>Vector</title>
      </argument>
      <argument type="matrix" index="2">
        <title>Projection basis</title>
      </argument>
    </function>
  </category>
</QALCULATE>
