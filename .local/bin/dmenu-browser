#!/usr/bin/env zsh

_copy() { echo -n "$@" | xclip -in -selection clipboard }

typeset -A options_=(
	['0.  New window']="$REAL_BROWSER --new-window"
	['1.  Current window']="$REAL_BROWSER"
	['2.  Copy to clipboard']="_copy"
	['3.  xdg-open']="xdg-open"
	['4.  mpv']="mpv"
	['5.  Qutebrowser']="qutebrowser"
	['6.  Tor Browser']="torbrowser-launcher"
	['7.  Chromium']="chromium"
	['8.  Firefox']="firefox"
	['9.  Brave']="brave-nightly"
	['10.  Librewolf']="librewolf"
	['11. Nyxt']="nyxt"
	['12. IceCat']="icecat"
	['13. Vieb']="vieb"
)

prompt="Browser"
entries="${(@kF)options_}"
num="${#options_}"

sel="$(sort -n <<<"$entries" | dmenu -bw 3 -c -R -l "$num" -p "$prompt")"

[[ -n "$sel" ]] && {
	result="${options_[$sel]}"
	echo "\n-- $(date) --\n-> \$ $0 $@\n<- \$ $result $@" >>/tmp/dmenu-browser.log
	echo "$result $@"
	"${=result}" "$@" &>>/tmp/dmenu-browser.log &!
}
