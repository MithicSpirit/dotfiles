#!/usr/bin/env zsh

LOCK_SCREEN="betterlockscreen -l -- --ignore-empty-password"
typeset -A options_=(
	['0. Lock']="$LOCK_SCREEN"
	['1. Log off']="systemctl --user exit"
	['2. Shut down']="systemctl poweroff"
	['3. Restart']="systemctl reboot"
	['4. Suspend']="$LOCK_SCREEN & systemctl suspend; wait"
)

sel="$(echo ${(@kF)options_} | sort | dmenu -bw 3 -c -R -l 7 -p "Power")"

eval "${options_[$sel]}"
