## Launch programs
super + return
	"$TERMINAL"

super + shift + return
	dmenu_run -p "Run"

super + a
	"$REAL_BROWSER"

super + shift + a
	pcmanfm

super + control + a
	doom everywhere


## Media controls
XF86AudioPlay
	playerctl play-pause

# For keyboards with mute but not playpause
shift + XF86AudioMute
	playerctl play-pause

XF86AudioMute
	amixer -D pulse -q sset Master toggle

XF86Audio{Raise,Lower}Volume
	amixer -D pulse -q sset Master 5%{+,-}


## Screenshot
super + p
	flameshot full --clipboard

super + control + p
	maim -ui "$(xdotool getactivewindow)" | xclip -sel clip -t image/png -i

super + shift + p
	flameshot-gui

super + control + shift + p
	flameshot launcher

super + alt + p
	replay-sorcery save


## Miscellaneous
XF86MonBrightness{Up,Down}
	xbacklight {+,-}2

