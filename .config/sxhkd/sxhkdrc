## Launch programs
super + Return
	dmenu_run -p "Run" >>/tmp/dmenu-run.log
super + shift + Return
	"$TERMINAL"
super + control + Return
	"$REAL_BROWSER" >>/tmp/browser.log
super + shift + control + Return
	pcmanfm

super + e
	visual
super + shift + e
	doom +everywhere

super + v
	dmenu-greenclip
super + shift + space
	dmenu-xkb

super + shift + q
	xautolock -locknow
super + ctrl + q
	xautolock -disable; betterlockscreen --off 0 -l -- --ignore-empty-password; xautolock -enable
#	betterlockscreen -l -- --ignore-empty-password
#super + ctrl + q
#	qtile cmd-obj -o cmd -f restart
super + ctrl + shift + q
	dmenu-shutdown

super + s ; super + d
	nice -n5 discord-canary
super + s ; super + shift + d
	nice -n5 signal-desktop
super + s ; super + ctrl + d
	nice -n5 element-desktop

super + s ; super + w
	onlyoffice
super + s ; super + shift + w
	nice -n5 zoom
super + s ; super + ctrl + w
	nice -n5 teams

super + s ; super + c
	nice -n5 lbry
#	"$REAL_BROWSER" --new-window 'https://odysee.com/$/following'
super + s ; super + shift + c
	"$REAL_BROWSER" --new-window 'https://www.youtube.com/feed/subscriptions'
super + s ; super + ctrl + c
	mpv "$(xclip -out -selection clipboard)"

super + s ; super + f
	lutris
super + s ; super + shift + f
	steam
super + s ; super + ctrl + f
	heroic

super + s ; super + v
	"$REAL_BROWSER" --new-window 'https://music.youtube.com/library/playlists'
super + s ; super + shift + v
	nice -n3 nuclear
super + s ; super + ctrl + v
	nice -n3 deadbeef

super + s ; super + r
	nice -n5 "$TERMINAL" -t btop -e btop
super + s ; super + shift + r
	nice -n5 "$TERMINAL" -t btm -e btm -b
super + s ; super + ctrl + r
	nice -n5 "$TERMINAL" -t update -e update
super + s ; super + shift + ctrl + r
	nice -n5 "$TERMINAL" -t radeontop -e sudo radeontop -cT

## Media controls
any + XF86AudioPlay
	playerctl play-pause
shift + XF86AudioMute
# For keyboards with mute but not playpause
	playerctl play-pause
any + XF86AudioMute
	amixer -D pulse -q sset Master toggle
shift + XF86Audio{Raise,Lower}Volume
	amixer -D pulse -q sset Master 10%{+,-}
any + XF86Audio{Raise,Lower}Volume
	amixer -D pulse -q sset Master 5%{+,-}

## Screenshot
super + p
	flameshot full
super + control + p
	maim -ui "$(xdotool getactivewindow)" | xclip -sel clip -t image/png -i
super + shift + p
	flameshot-gui
super + control + shift + p
	replay-sorcery save

## Miscellaneous
shift + XF86MonBrightness{Up,Down}
	xbacklight {+,-}18
any + XF86MonBrightness{Up,Down}
	xbacklight {+,-}2
