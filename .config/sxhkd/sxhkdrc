## Launch programs
super + Return
	"$TERMINAL"

super + shift + Return
	dmenu_run -p "Run"

super + a
	"$REAL_BROWSER"

super + shift + a
	pcmanfm

super + control + a
	doom everywhere


## Media controls
any + XF86AudioPlay
	playerctl play-pause

# For keyboards with mute but not playpause
shift + XF86AudioMute
	playerctl play-pause

any + XF86AudioMute
	amixer -D pulse -q sset Master toggle

any + XF86Audio{Raise,Lower}Volume
	amixer -D pulse -q sset Master 5%{+,-}


## Screenshot
super + p
	flameshot full

super + control + p
	maim -ui "$(xdotool getactivewindow)" | xclip -sel clip -t image/png -i

super + shift + p
	flameshot-gui

super + control + shift + p
	replay-sorcery save


## Miscellaneous
any + XF86MonBrightness{Up,Down}
	xbacklight {+,-}2

